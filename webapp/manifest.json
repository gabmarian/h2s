{
	"_version": "1.8.0",
	"sap.app": {
		"id": "h2s.PolyTransManager",
		"type": "application",
		"i18n": "i18n/i18n.properties",
		"applicationVersion": {
			"version": "1.0.0"
		},
		"title": "{{appTitle}}",
		"description": "{{appDescription}}",
		"dataSources": {
			"localModel": {
				"uri": "model/localModel.json",
				"type": "JSON"
			}
		},
		"sourceTemplate": {
			"id": "ui5template.basicSAPUI5ApplicationProject",
			"version": "1.40.12"
		}
	},

	"sap.ui": {
		"technology": "UI5",
		"icons": {
			"icon": "",
			"favIcon": "",
			"phone": "",
			"phone@2": "",
			"tablet": "",
			"tablet@2": ""
		},
		"deviceTypes": {
			"desktop": true,
			"tablet": true,
			"phone": true
		},
		"supportedThemes": [
			"sap_hcb",
			"sap_belize"

		]
	},

	"sap.ui5": {
		"rootView": {
			"viewName": "h2s.PolyTransManager.view.App",
			"type": "XML"
		},
		"dependencies": {
			"minUI5Version": "1.60.1",
			"libs": {
				"sap.ui.layout": {},
				"sap.ui.core": {},
				"sap.m": {}
			}
		},
		"contentDensities": {
			"compact": true,
			"cozy": true
		},
		"models": {
			"i18n": {
				"type": "sap.ui.model.resource.ResourceModel",
				"settings": {
					"bundleName": "h2s.PolyTransManager.i18n.i18n"
				}
			},
			"": {
				"type": "sap.ui.model.json.JSONModel",
				"dataSource": "localModel"
			}
		},
		"resources": {
			"css": [{
				"uri": "css/style.css"
			}]
		},
		"routing": {
			"config": {
				"routerClass": "sap.m.routing.Router",
				"viewType": "XML",
				"async": true,
				"viewPath": "h2s.PolyTransManager.view",
				"controlId": "splitApp",
				"controlAggregation": "detailPages",
				"clearTarget": false
			},
			"routes": [{
				"name": "transport",
				"pattern": "transport/{index}",
				"target": ["transportList", "transport"]
			}, {
				"name": "default",
				"pattern": "",
				"target": ["transportList", "transport"]
			}			
		
			],
			"targets": {
			    "transportList": {
			    	"controlAggregation": "masterPages",
					"viewType": "XML",
					"transition": "slide",
					"clearControlAggregation": false,
					"viewName": "TransportList"			    	
			    },
				"transport": {
					"controlAggregation": "detailPages",
					"viewType": "XML",
					"transition": "slide",
					"clearControlAggregation": false,
					"viewName": "Transport"
				}
			}
		}
	}
}