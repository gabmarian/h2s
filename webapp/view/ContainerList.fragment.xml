<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	<Table items="{containers}" id="containerTab" headerText="Containers" itemPress="onItemPress" >
		<headerToolbar/>
		<columns>
			<Column>
				<header>
					<Text text="ID"/>
				</header>
				<footer/>
			</Column>
			<Column>
				<header>
					<Text text="Material"/>
				</header>
				<footer/>
			</Column>
			<Column>
				<header>
					<Text text="Container Type"/>
				</header>
				<footer/>
			</Column>
			<Column>
				<header>
					<Text text="Temperature"/>
				</header>
				<footer/>
			</Column>
			<Column>
				<header>
					<Text text=""/>
				</header>
				<footer/>
			</Column>			
		</columns>
		<items>
			<ColumnListItem type="Active">
				<cells>
					<ObjectIdentifier title="{Id}"/>
					<Text text="{Material}"/>
					<Text text="{Type}"/>
					<Text text="{path:'Temperature', type: 'sap.ui.model.type.Float', formatOptions: {decimals: 2}} CÂ°"/>
					<core:Icon src="{TempIcon}" visible="{TempChanged}"/>
				</cells>
			</ColumnListItem>
		</items>
	</Table>
</core:FragmentDefinition>